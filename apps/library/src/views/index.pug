html
  head
    title= title
    link(rel='stylesheet', type='text/css', href='css/main.css')

  body
  main
    h1 Library
    ul#library.library
      each item in items
        include item.pug
    form(
      hx-post='/api/add-item',
      hx-target='#library',
      hx-swap='beforeend',
      hx-trigger='submit',
      hx-on::after-request='this.reset()'
    )
      .library_add-item
        input(type='text', name='title', placeholder='Title')
        button(type='submit', name='button') Add Item

  script(src='https://unpkg.com/htmx.org@1.9.12')
